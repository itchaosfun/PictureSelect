<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.cn.chaos.pictureselect">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.cn.chaos.pictureselect.ShowImageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.cn.chaos.pictureselect.CustomAlbumActivity"
            android:label="@string/title_activity_custom_album"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.cn.chaos.pictureselect.AlbumActivity"
            android:label="@string/title_activity_photo_view2"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.cn.chaos.pictureselect.PhotoViewActivity"/>
    </application>

</manifest>